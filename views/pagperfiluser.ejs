            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header border-bottom mb-3 d-flex d-md-none">
                        <ul class="nav nav-tabs card-header-tabs nav-gap-x-1" role="tablist">
                            <li class="nav-item">
                                <a href="#profile" data-toggle="tab" class="nav-link has-icon active"><svg
                                        xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                        fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                        stroke-linejoin="round" class="feather feather-user">
                                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="12" cy="7" r="4"></circle>
                                    </svg></a>
                            </li>
                            <li class="nav-item">
                                <a href="#favoritos" data-toggle="tab" class="nav-link has-icon"><svg
                                        xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                        fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                        stroke-linejoin="round" class="feather feather-shield">
                                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                                    </svg></a>
                            </li>
                        </ul>
                    </div>

                    <div class="card-body tab-content">
                        <div class="tab-pane active" id="profile">
                            <h6>Informações do perfil</h6>
                            <hr>
                            <form method="post">
                                <div class="form-group">
                                    <label for="name">Nome</label>
                                    <input name="nome" type="text" class="form-control" id="name"
                                        placeholder="Insira seu nome" value="<%= tagNome %>" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input name="email" type="email" class="form-control" id="email"
                                        placeholder="Insira seu email" value="<%= tagEmail %>" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="password">Senha</label>
                                    <input name="password" type="text" class="form-control" id="password"
                                        placeholder="Insira sua senha" value="<%= tagSenha %>" readonly>
                                </div>
                                <button type="button" class="btn btn-primary" id="btatualizar">Atualizar</button>
                                <input formaction="/update" type="submit" value="Salvar" class="btn btn-primary"
                                    id="btupdate" hidden>
                                <input formaction="/delete" type="submit" value="Deletar" class="btn btn-primary"
                                    id="btdeletar">
                                <a href="/logout"><button type="button" class="btn btn-primary"
                                        id="btLogout">Sair</button></a>
                                <script>
                                    const update = document.getElementById('btatualizar');
                                    update.addEventListener('click', function () {
                                        document.getElementById('btatualizar').setAttribute('hidden', '');
                                        document.getElementById('btupdate').removeAttribute('hidden', '');
                                        document.getElementById('password').removeAttribute('readonly', '');
                                        document.getElementById('name').removeAttribute('readonly', '');
                                    });
                                    const update2 = document.getElementById('btupdate');
                                    update2.addEventListener('click', function () {
                                        document.getElementById('btupdate').setAttribute('hidden', '');
                                        document.getElementById('btatualizar').removeAttribute('hidden', '');
                                        document.getElementById('password').setAttribute('readonly', '');
                                        document.getElementById('name').setAttribute('readonly', '');
                                    });
                                </script>
                            </form>
                        </div>
                        <div class="tab-pane" id="favoritos">
                            <h6>Favoritados</h6>
                            <hr>
                            <form method="post">
                                <table>

                                </table>
                            </form>
                            <script>
                                const table = document.querySelector('table');
                                var filtro = [{"id_universidade":2,"nome_universidade":"Universidade Federal do Paraná","sigla_universidade":"UFPR","site":"https://ufpr.br/","privada":0},{"id_universidade":3,"nome_universidade":"Universidade Estadual de Londrina","sigla_universidade":"UEL","site":"https://portal.uel.br/home/","privada":0}];
                                const tr2 = document.createElement('tr');
                                var linha = '';
                                var i = 0;
                                var id = "";
                                if (filtro != "") {
                                    for (let chave in filtro[0]) {
                                        if (!chave.includes("id_")) {
                                            linha = tr2.insertCell(i);
                                            i++;
                                            chave = chave.replace("_", " ");
                                            chave = chave.charAt(0).toUpperCase() + chave.slice(1);
                                            linha.textContent = chave;

                                        }
                                    }
                                    linha = tr2.insertCell(i);
                                    linha.textContent = "Excluir";
                                    tr2.id = 'first';
                                    table.appendChild(tr2);
                                    for (let index = 0; index < filtro.length; index++) {
                                        linha = '';
                                        const tr3 = document.createElement('tr');
                                        var d = 0;
                                        linha = tr3.insertCell(d);
                                        for (let chave in filtro[index]) {
                                            if (!chave.includes("id_")) {
                                                if (chave == "privada") {
                                                    filtro[index][chave] = filtro[index][chave] == "0" ? "não" : "sim";
                                                }
                                                if (chave.includes("site")) {
                                                    const link = document.createElement('a');
                                                    link.href = filtro[index][chave];
                                                    link.innerHTML = "visite";
                                                    linha = tr3.insertCell(d);
                                                    linha.appendChild(link);
                                                    d++;
                                                } else {
                                                    linha = tr3.insertCell(d);
                                                    linha.textContent = filtro[index][chave];
                                                    d++;
                                                }
                                            } else {
                                                id = filtro[index][chave];
                                            }
                                        }
                                        linha = tr3.insertCell(d);
                                        const bot = document.createElement('input');
                                        bot.type = "submit"
                                        bot.value = "X";
                                        bot.name = id;
                                        bot.formAction = "/deletefav";
                                        linha.appendChild(bot);
                                        tr3.className = 'resto';
                                        table.appendChild(tr3);
                                    }
                                }
                            </script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
